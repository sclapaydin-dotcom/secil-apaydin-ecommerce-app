@model List<ECommerceApp.Models.Category>
@{
    ViewBag.Title = "Kategoriler";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h6 class="m-0 fw-bold">Kategori Listesi</h6>
        <a asp-action="Create" class="btn btn-sm btn-gold">
            <i class="bi bi-plus-circle me-1"></i> Yeni Kategori
        </a>
    </div>
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th class="ps-4">#</th>
                    <th>Kategori Adı</th>
                    <th>Ürün Sayısı</th>
                    <th>Durum</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cat in Model)
                {
                    <tr>
                        <td class="ps-4">@cat.Id</td>
                        <td class="fw-semibold">@cat.Name</td>
                        <td>@cat.Products.Count</td>
                        <td>
                            @if (cat.IsActive)
                            {
                                <span class="badge bg-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Pasif</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@cat.Id" class="btn btn-sm btn-outline-primary me-1">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <form asp-action="Delete" asp-route-id="@cat.Id" method="post" class="d-inline" onsubmit="return confirm('Bu kategoriyi silmek istediğinize emin misiniz?')">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
