@model ECommerceApp.Models.Category
@{
    ViewBag.Title = "Kategori Düzenle";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h6 class="m-0 fw-bold">Kategori Düzenle: @Model.Name</h6>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    <input asp-for="Id" type="hidden">
                    <div class="mb-3">
                        <label asp-for="Name" class="form-label fw-semibold"></label>
                        <input asp-for="Name" class="form-control">
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>
                    <div class="mb-3 form-check">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox">
                        <label asp-for="IsActive" class="form-check-label">Aktif</label>
                    </div>
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-gold">Güncelle</button>
                        <a asp-action="Index" class="btn btn-outline-secondary">İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
