@model List<ECommerceApp.Models.Slider>
@{
    ViewBag.Title = "Sliderlar";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h6 class="m-0 fw-bold">Slider Listesi</h6>
        <a asp-action="Create" class="btn btn-sm btn-gold">
            <i class="bi bi-plus-circle me-1"></i> Yeni Slider
        </a>
    </div>
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th class="ps-4">Resim</th>
                    <th>Başlık</th>
                    <th>Alt Başlık</th>
                    <th>Sıra</th>
                    <th>Durum</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var s in Model)
                {
                    <tr>
                        <td class="ps-4">
                            @if (!string.IsNullOrEmpty(s.ImageUrl))
                            {
                                <img src="@s.ImageUrl" style="width:80px;height:45px;object-fit:cover;border-radius:6px;" alt="@s.Title">
                            }
                        </td>
                        <td class="fw-semibold align-middle">@s.Title</td>
                        <td class="align-middle text-muted">@s.SubTitle</td>
                        <td class="align-middle">@s.OrderNo</td>
                        <td class="align-middle">
                            @if (s.IsActive)
                            {
                                <span class="badge bg-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Pasif</span>
                            }
                        </td>
                        <td class="align-middle">
                            <a asp-action="Edit" asp-route-id="@s.Id" class="btn btn-sm btn-outline-primary me-1">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <form asp-action="Delete" asp-route-id="@s.Id" method="post" class="d-inline" onsubmit="return confirm('Slider silinecek. Emin misiniz?')">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
