@model ECommerceApp.Models.Slider
@{
    ViewBag.Title = "Slider Düzenle";
}

<div class="row justify-content-center">
    <div class="col-md-7">
        <div class="card">
            <div class="card-header">
                <h6 class="m-0 fw-bold">Slider Düzenle</h6>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <input asp-for="Id" type="hidden">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <input asp-for="ImageUrl" type="hidden">
                    }
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label fw-semibold"></label>
                        <input asp-for="Title" class="form-control">
                        <span asp-validation-for="Title" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="SubTitle" class="form-label fw-semibold"></label>
                        <input asp-for="SubTitle" class="form-control">
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ButtonText" class="form-label fw-semibold"></label>
                            <input asp-for="ButtonText" class="form-control">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="ButtonUrl" class="form-label fw-semibold"></label>
                            <input asp-for="ButtonUrl" class="form-control">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label class="form-label fw-semibold">Yeni Resim (opsiyonel)</label>
                            <input type="file" name="imageFile" class="form-control" accept="image/*">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" class="mt-2" style="height:50px;border-radius:6px;" alt="Mevcut">
                            }
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="OrderNo" class="form-label fw-semibold"></label>
                            <input asp-for="OrderNo" type="number" class="form-control" min="1">
                        </div>
                    </div>
                    <div class="mb-3 form-check">
                        <input asp-for="IsActive" type="checkbox" class="form-check-input">
                        <label asp-for="IsActive" class="form-check-label">Aktif</label>
                    </div>
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-gold">Güncelle</button>
                        <a asp-action="Index" class="btn btn-outline-secondary">İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
