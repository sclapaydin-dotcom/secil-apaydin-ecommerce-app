@model ECommerceApp.Models.ContactMessage
@{
    ViewBag.Title = "Mesaj Detayı";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="m-0 fw-bold">Mesaj Detayı</h6>
                <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i> Geri
                </a>
            </div>
            <div class="card-body">
                <table class="table">
                    <tr>
                        <th style="width:150px;">Gönderen</th>
                        <td>@Model.FullName</td>
                    </tr>
                    <tr>
                        <th>E-posta</th>
                        <td><a href="mailto:@Model.Email">@Model.Email</a></td>
                    </tr>
                    <tr>
                        <th>Konu</th>
                        <td>@(Model.Subject ?? "—")</td>
                    </tr>
                    <tr>
                        <th>Tarih</th>
                        <td>@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                    </tr>
                </table>
                <div class="mt-3">
                    <h6 class="fw-bold">Mesaj İçeriği</h6>
                    <div class="p-3 bg-light rounded">@Model.Message</div>
                </div>
                <div class="mt-3">
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" onsubmit="return confirm('Bu mesajı silmek istediğinize emin misiniz?')">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-danger btn-sm">
                            <i class="bi bi-trash me-1"></i>Mesajı Sil
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
