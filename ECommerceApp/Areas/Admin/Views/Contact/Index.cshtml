@model List<ECommerceApp.Models.ContactMessage>
@{
    ViewBag.Title = "İletişim Mesajları";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h6 class="m-0 fw-bold">İletişim Mesajları (@Model.Count)</h6>
    </div>
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th class="ps-4">Gönderen</th>
                    <th>E-posta</th>
                    <th>Konu</th>
                    <th>Tarih</th>
                    <th>Durum</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var msg in Model)
                {
                    <tr class="@(!msg.IsRead ? "table-warning" : "")">
                        <td class="ps-4 align-middle fw-semibold">@msg.FullName</td>
                        <td class="align-middle text-muted small">@msg.Email</td>
                        <td class="align-middle">@(msg.Subject ?? "—")</td>
                        <td class="align-middle text-muted small">@msg.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                        <td class="align-middle">
                            @if (!msg.IsRead)
                            {
                                <span class="badge bg-warning text-dark">Yeni</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Okundu</span>
                            }
                        </td>
                        <td class="align-middle">
                            <a asp-action="Detail" asp-route-id="@msg.Id" class="btn btn-sm btn-outline-primary me-1">
                                <i class="bi bi-eye"></i>
                            </a>
                            <form asp-action="Delete" asp-route-id="@msg.Id" method="post" class="d-inline" onsubmit="return confirm('Bu mesajı silmek istediğinize emin misiniz?')">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
