@model List<ECommerceApp.Models.Product>
@{
    ViewBag.Title = "Ürünler";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h6 class="m-0 fw-bold">Ürün Listesi (@Model.Count)</h6>
        <a asp-action="Create" class="btn btn-sm btn-gold">
            <i class="bi bi-plus-circle me-1"></i> Yeni Ürün
        </a>
    </div>
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th class="ps-4">Resim</th>
                    <th>Ürün Adı</th>
                    <th>Kategori</th>
                    <th>Fiyat</th>
                    <th>Öne Çıkan</th>
                    <th>Durum</th>
                    <th>İşlem</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model)
                {
                    <tr>
                        <td class="ps-4">
                            @if (!string.IsNullOrEmpty(p.ImageUrl))
                            {
                                <img src="@p.ImageUrl" style="width:50px;height:50px;object-fit:cover;border-radius:6px;" alt="@p.Name">
                            }
                            else
                            {
                                <div style="width:50px;height:50px;background:#f0f0f0;border-radius:6px;display:flex;align-items:center;justify-content:center;">
                                    <i class="bi bi-image text-muted"></i>
                                </div>
                            }
                        </td>
                        <td class="fw-semibold align-middle">@p.Name</td>
                        <td class="align-middle text-muted">@p.Category?.Name</td>
                        <td class="align-middle fw-bold" style="color:#c8a96e;">@p.Price.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</td>
                        <td class="align-middle">
                            @if (p.IsFeatured)
                            {
                                <i class="bi bi-star-fill text-warning"></i>
                            }
                        </td>
                        <td class="align-middle">
                            @if (p.IsActive)
                            {
                                <span class="badge bg-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Pasif</span>
                            }
                        </td>
                        <td class="align-middle">
                            <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-outline-primary me-1">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <form asp-action="Delete" asp-route-id="@p.Id" method="post" class="d-inline" onsubmit="return confirm('Bu ürünü silmek istediğinize emin misiniz?')">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
