@model ECommerceApp.Models.Product
@{
    ViewBag.Title = "Ürün Düzenle";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h6 class="m-0 fw-bold">Ürün Düzenle: @Model.Name</h6>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <input asp-for="Id" type="hidden">
                    <input asp-for="CreatedAt" type="hidden">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <input asp-for="ImageUrl" type="hidden">
                    }
                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label asp-for="Name" class="form-label fw-semibold"></label>
                            <input asp-for="Name" class="form-control">
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Price" class="form-label fw-semibold"></label>
                            <div class="input-group">
                                <span class="input-group-text">₺</span>
                                <input asp-for="Price" type="number" step="0.01" class="form-control">
                            </div>
                            <span asp-validation-for="Price" class="text-danger small"></span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label fw-semibold"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CategoryId" class="form-label fw-semibold"></label>
                            <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Categories">
                                <option value="">-- Seçiniz --</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label fw-semibold">Yeni Resim (opsiyonel)</label>
                            <input type="file" name="imageFile" class="form-control" accept="image/*">
                            @if (!string.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" class="mt-2" style="height:60px;border-radius:6px;" alt="Mevcut">
                            }
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-check">
                                <input asp-for="IsActive" type="checkbox" class="form-check-input">
                                <label asp-for="IsActive" class="form-check-label">Aktif</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check">
                                <input asp-for="IsFeatured" type="checkbox" class="form-check-input">
                                <label asp-for="IsFeatured" class="form-check-label">Öne Çıkan</label>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-gold">Güncelle</button>
                        <a asp-action="Index" class="btn btn-outline-secondary">İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
