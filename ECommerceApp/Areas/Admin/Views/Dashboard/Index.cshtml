@{
    ViewBag.Title = "Dashboard";
    var recentMessages = ViewBag.RecentMessages as List<ECommerceApp.Models.ContactMessage>;
    var recentProducts = ViewBag.RecentProducts as List<ECommerceApp.Models.Product>;
}

<div class="row g-4 mb-4">
    <div class="col-xl-3 col-md-6">
        <div class="stat-card" style="background: linear-gradient(135deg, #667eea, #764ba2);">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="stat-number">@ViewBag.ProductCount</div>
                    <div class="stat-label">Toplam Ürün</div>
                </div>
                <i class="bi bi-bag stat-icon"></i>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="stat-card" style="background: linear-gradient(135deg, #f093fb, #f5576c);">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="stat-number">@ViewBag.CategoryCount</div>
                    <div class="stat-label">Kategori</div>
                </div>
                <i class="bi bi-grid stat-icon"></i>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="stat-card" style="background: linear-gradient(135deg, #4facfe, #00f2fe);">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="stat-number">@ViewBag.MessageCount</div>
                    <div class="stat-label">Toplam Mesaj</div>
                </div>
                <i class="bi bi-envelope stat-icon"></i>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="stat-card" style="background: linear-gradient(135deg, #43e97b, #38f9d7);">
            <div class="d-flex justify-content-between align-items-start">
                <div>
                    <div class="stat-number">@ViewBag.UnreadMessageCount</div>
                    <div class="stat-label">Okunmamış Mesaj</div>
                </div>
                <i class="bi bi-envelope-exclamation stat-icon"></i>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-7">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="m-0 fw-bold">Son Mesajlar</h6>
                <a asp-area="Admin" asp-controller="Contact" asp-action="Index" class="btn btn-sm btn-gold">Tümünü Gör</a>
            </div>
            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th class="ps-4">Gönderen</th>
                            <th>Konu</th>
                            <th>Tarih</th>
                            <th>Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (recentMessages != null && recentMessages.Any())
                        {
                            foreach (var msg in recentMessages)
                            {
                                <tr>
                                    <td class="ps-4">
                                        <a asp-area="Admin" asp-controller="Contact" asp-action="Detail" asp-route-id="@msg.Id" class="text-decoration-none text-dark">
                                            @msg.FullName
                                        </a>
                                    </td>
                                    <td class="text-muted small">@(msg.Subject ?? "—")</td>
                                    <td class="text-muted small">@msg.CreatedAt.ToString("dd MMM HH:mm")</td>
                                    <td>
                                        @if (!msg.IsRead)
                                        {
                                            <span class="badge bg-danger">Yeni</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Okundu</span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="4" class="text-center text-muted py-3">Henüz mesaj yok</td></tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-lg-5">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h6 class="m-0 fw-bold">Son Ürünler</h6>
                <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-sm btn-gold">Tümünü Gör</a>
            </div>
            <div class="card-body p-0">
                <ul class="list-group list-group-flush">
                    @if (recentProducts != null && recentProducts.Any())
                    {
                        foreach (var p in recentProducts)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center px-4">
                                <div>
                                    <div class="fw-semibold small">@p.Name</div>
                                    <div class="text-muted" style="font-size:0.8rem;">@p.Category?.Name</div>
                                </div>
                                <span class="fw-bold" style="color:#c8a96e;">@p.Price.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</span>
                            </li>
                        }
                    }
                    else
                    {
                        <li class="list-group-item text-center text-muted py-3">Ürün bulunamadı</li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="row g-4 mt-2">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h6 class="m-0 fw-bold">Hızlı Erişim</h6>
            </div>
            <div class="card-body d-flex flex-wrap gap-3">
                <a asp-area="Admin" asp-controller="Product" asp-action="Create" class="btn btn-gold">
                    <i class="bi bi-plus-circle me-1"></i> Yeni Ürün
                </a>
                <a asp-area="Admin" asp-controller="Category" asp-action="Create" class="btn btn-outline-secondary">
                    <i class="bi bi-plus-circle me-1"></i> Yeni Kategori
                </a>
                <a asp-area="Admin" asp-controller="Slider" asp-action="Create" class="btn btn-outline-secondary">
                    <i class="bi bi-plus-circle me-1"></i> Yeni Slider
                </a>
                <a asp-area="Admin" asp-controller="Contact" asp-action="Index" class="btn btn-outline-danger">
                    <i class="bi bi-envelope me-1"></i> Mesajları Gör (@ViewBag.UnreadMessageCount okunmamış)
                </a>
            </div>
        </div>
    </div>
</div>
