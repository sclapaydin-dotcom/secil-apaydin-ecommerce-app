<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yönetim Paneli - @(ViewBag.Title ?? "Admin")</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body { font-family: 'Segoe UI', sans-serif; background: #f4f6f9; }
        .sidebar {
            width: 250px;
            min-height: 100vh;
            background: #1e2a3a;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 100;
            padding-top: 0;
        }
        .sidebar-brand {
            background: #16212e;
            padding: 20px 25px;
            border-bottom: 1px solid #2d3f52;
        }
        .sidebar-brand a {
            color: #fff;
            text-decoration: none;
            font-size: 1.2rem;
            font-weight: 600;
        }
        .sidebar-brand span {
            color: #c8a96e;
        }
        .sidebar-menu { padding: 15px 0; }
        .sidebar-menu a {
            display: flex;
            align-items: center;
            padding: 10px 25px;
            color: #adb5bd;
            text-decoration: none;
            font-size: 0.9rem;
            transition: all 0.2s;
            border-left: 3px solid transparent;
        }
        .sidebar-menu a:hover,
        .sidebar-menu a.active {
            background: #2d3f52;
            color: #fff;
            border-left-color: #c8a96e;
        }
        .sidebar-menu a i { margin-right: 10px; font-size: 1rem; width: 20px; }
        .sidebar-menu .menu-section {
            padding: 15px 25px 5px;
            font-size: 0.7rem;
            color: #6c757d;
            text-transform: uppercase;
            letter-spacing: 1px;
        }
        .main-content {
            margin-left: 250px;
            min-height: 100vh;
        }
        .topbar {
            background: #fff;
            border-bottom: 1px solid #e9ecef;
            padding: 12px 25px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }
        .topbar .page-title { font-size: 1.1rem; font-weight: 600; color: #333; margin: 0; }
        .content-area { padding: 25px; }
        .card { border: none; border-radius: 12px; box-shadow: 0 1px 4px rgba(0,0,0,0.08); }
        .card-header { background: #fff; border-bottom: 1px solid #f0f0f0; border-radius: 12px 12px 0 0 !important; padding: 15px 20px; }
        .stat-card { border-radius: 12px; color: #fff; padding: 20px; }
        .stat-card .stat-icon { font-size: 2.5rem; opacity: 0.7; }
        .stat-card .stat-number { font-size: 2rem; font-weight: 700; }
        .stat-card .stat-label { font-size: 0.85rem; opacity: 0.85; }
        .btn-gold { background: #c8a96e; color: #fff; border: none; }
        .btn-gold:hover { background: #b8954e; color: #fff; }
        table thead th { background: #f8f9fa; font-size: 0.85rem; font-weight: 600; color: #555; border-bottom: 2px solid #dee2e6; }
        .badge-unread { background: #dc3545; color: white; font-size: 0.7rem; padding: 2px 6px; border-radius: 10px; }
        @@media (max-width: 768px) {
            .sidebar { transform: translateX(-100%); }
            .main-content { margin-left: 0; }
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <div class="sidebar-brand">
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                <span>Moda</span>Store <small style="font-size:0.7rem;opacity:0.7;">Admin</small>
            </a>
        </div>
        <div class="sidebar-menu">
            <div class="menu-section">Ana Menü</div>
            <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")">
                <i class="bi bi-speedometer2"></i> Dashboard
            </a>
            <div class="menu-section">İçerik</div>
            <a asp-area="Admin" asp-controller="Slider" asp-action="Index" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Slider" ? "active" : "")">
                <i class="bi bi-images"></i> Sliderlar
            </a>
            <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Product" ? "active" : "")">
                <i class="bi bi-bag"></i> Ürünler
            </a>
            <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Category" ? "active" : "")">
                <i class="bi bi-grid"></i> Kategoriler
            </a>
            <a asp-area="Admin" asp-controller="About" asp-action="Index" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "About" ? "active" : "")">
                <i class="bi bi-info-circle"></i> Hakkımızda
            </a>
            <a asp-area="Admin" asp-controller="Contact" asp-action="Index" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Contact" ? "active" : "")">
                <i class="bi bi-envelope"></i> Mesajlar
            </a>
            <div class="menu-section">Sistem</div>
            <a asp-area="Admin" asp-controller="Setting" asp-action="Index" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Setting" ? "active" : "")">
                <i class="bi bi-gear"></i> Site Ayarları
            </a>
        </div>
    </div>

    <div class="main-content">
        <div class="topbar">
            <h1 class="page-title">@(ViewBag.Title ?? "Dashboard")</h1>
            <div class="d-flex align-items-center gap-3">
                <a asp-controller="Home" asp-action="Index" asp-area="" target="_blank" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-eye"></i> Siteyi Gör
                </a>
                <form asp-area="Admin" asp-controller="Account" asp-action="Logout" method="post" class="m-0">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-sm btn-outline-danger">
                        <i class="bi bi-box-arrow-right"></i> Çıkış
                    </button>
                </form>
            </div>
        </div>

        <div class="content-area">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-x-circle me-2"></i>@TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @RenderBody()
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        setTimeout(function() {
            var alerts = document.querySelectorAll('.alert');
            alerts.forEach(function(a) {
                var bsAlert = bootstrap.Alert.getOrCreateInstance(a);
                bsAlert.close();
            });
        }, 4000);
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
