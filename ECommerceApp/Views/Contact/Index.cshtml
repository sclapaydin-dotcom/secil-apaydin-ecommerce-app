@model ECommerceApp.Models.ContactMessage
@{
    ViewBag.Title = "İletişim";
    var setting = ViewBag.SiteSetting;
}

<section class="bg-img1 txt-center p-lr-15 p-tb-92" style="background-image: url('/images/bg-01.jpg');">
    <h2 class="ltext-105 cl0 txt-center">İletişim</h2>
</section>

<section class="bg0 p-t-104 p-b-116">
    <div class="container">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success txt-center m-b-30">
                @TempData["Success"]
            </div>
        }
        <div class="flex-w flex-tr">
            <div class="size-210 bor10 p-lr-70 p-t-55 p-b-70 p-lr-15-lg w-full-md">
                <form asp-action="Send" asp-controller="Contact" method="post">
                    @Html.AntiForgeryToken()
                    <h4 class="mtext-105 cl2 txt-center p-b-30">Bize Mesaj Gönderin</h4>
                    
                    <div class="bor8 m-b-20 how-pos4-parent">
                        <input asp-for="FullName" class="stext-111 cl2 plh3 size-116 p-l-62 p-r-30" placeholder="Adınız Soyadınız">
                        <img class="how-pos4 pointer-none" src="~/images/icons/icon-email.png" alt="icon">
                    </div>
                    <span asp-validation-for="FullName" class="stext-111 cl2 p-b-5" style="color:red;display:block;"></span>
                    
                    <div class="bor8 m-b-20 how-pos4-parent">
                        <input asp-for="Email" class="stext-111 cl2 plh3 size-116 p-l-62 p-r-30" placeholder="E-posta Adresiniz">
                        <img class="how-pos4 pointer-none" src="~/images/icons/icon-email.png" alt="icon">
                    </div>
                    <span asp-validation-for="Email" class="stext-111 cl2 p-b-5" style="color:red;display:block;"></span>
                    
                    <div class="bor8 m-b-20 how-pos4-parent">
                        <input asp-for="Subject" class="stext-111 cl2 plh3 size-116 p-l-62 p-r-30" placeholder="Konu">
                        <img class="how-pos4 pointer-none" src="~/images/icons/icon-email.png" alt="icon">
                    </div>
                    
                    <div class="bor8 m-b-30">
                        <textarea asp-for="Message" class="stext-111 cl2 plh3 size-120 p-lr-28 p-tb-25" placeholder="Mesajınız..."></textarea>
                    </div>
                    <span asp-validation-for="Message" class="stext-111 cl2 p-b-5" style="color:red;display:block;"></span>
                    
                    <button type="submit" class="flex-c-m stext-101 cl0 size-121 bg3 bor1 hov-btn3 p-lr-15 trans-04 pointer">
                        Gönder
                    </button>
                </form>
            </div>

            <div class="size-210 bor10 flex-w flex-col-m p-lr-93 p-tb-30 p-lr-15-lg w-full-md">
                @if (setting != null)
                {
                    <div class="flex-w w-full p-b-42">
                        <span class="fs-18 cl5 txt-center size-211">
                            <span class="lnr lnr-map-marker"></span>
                        </span>
                        <div class="size-212 p-t-2">
                            <span class="mtext-110 cl2">Adres</span>
                            <p class="stext-115 cl6 size-213 p-t-18">@setting.Address</p>
                        </div>
                    </div>
                    <div class="flex-w w-full p-b-42">
                        <span class="fs-18 cl5 txt-center size-211">
                            <span class="lnr lnr-phone-handset"></span>
                        </span>
                        <div class="size-212 p-t-2">
                            <span class="mtext-110 cl2">Telefon</span>
                            <p class="stext-115 cl1 size-213 p-t-18">@setting.PhoneNumber</p>
                        </div>
                    </div>
                    <div class="flex-w w-full">
                        <span class="fs-18 cl5 txt-center size-211">
                            <span class="lnr lnr-envelope"></span>
                        </span>
                        <div class="size-212 p-t-2">
                            <span class="mtext-110 cl2">E-posta</span>
                            <p class="stext-115 cl1 size-213 p-t-18">@setting.Email</p>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>

@section Scripts {
<script src="~/vendor/jquery-validation/jquery.validate.min.js"></script>
<script src="~/vendor/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
