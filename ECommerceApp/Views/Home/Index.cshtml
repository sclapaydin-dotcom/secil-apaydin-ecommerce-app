@{
    ViewBag.Title = "Anasayfa";
    var sliders = ViewBag.Sliders as List<ECommerceApp.Models.Slider>;
    var products = ViewBag.FeaturedProducts as List<ECommerceApp.Models.Product>;
    var categories = ViewBag.Categories as List<ECommerceApp.Models.Category>;
}

<section class="section-slide">
    <div class="wrap-slick1">
        <div class="slick1">
            @if (sliders != null && sliders.Any())
            {
                foreach (var slider in sliders)
                {
                    <div class="item-slick1" style="background-image: url('@slider.ImageUrl');">
                        <div class="container h-full">
                            <div class="flex-col-l-m h-full p-t-100 p-b-30 respon5">
                                <div class="layer-slick1 animated visible-false" data-appear="fadeInDown" data-delay="0">
                                    <span class="ltext-101 cl2 respon2">@slider.SubTitle</span>
                                </div>
                                <div class="layer-slick1 animated visible-false" data-appear="fadeInUp" data-delay="800">
                                    <h2 class="ltext-201 cl2 p-t-19 p-b-43 respon1">@slider.Title</h2>
                                </div>
                                @if (!string.IsNullOrEmpty(slider.ButtonText))
                                {
                                    <div class="layer-slick1 animated visible-false" data-appear="zoomIn" data-delay="1600">
                                        <a href="@slider.ButtonUrl" class="flex-c-m stext-101 cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04">
                                            @slider.ButtonText
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>

<div class="sec-banner bg0 p-t-80 p-b-50">
    <div class="container">
        <div class="row">
            @if (categories != null)
            {
                foreach (var cat in categories.Take(3))
                {
                    <div class="col-md-6 col-xl-4 p-b-30 m-lr-auto">
                        <div class="block1 wrap-pic-w">
                            <img src="~/images/banner-01.jpg" alt="@cat.Name">
                            <a asp-controller="Product" asp-action="Index" asp-route-categoryId="@cat.Id" class="block1-txt ab-t-l s-full flex-col-l-sb p-lr-38 p-tb-34 trans-03 respon3">
                                <div class="block1-txt-child1 flex-col-l">
                                    <span class="block1-name ltext-102 trans-04 p-b-8">@cat.Name</span>
                                    <span class="block1-info stext-102 trans-04">Yeni Sezon</span>
                                </div>
                                <div class="block1-txt-child2 p-b-4 trans-05">
                                    <div class="block1-link stext-101 cl0 trans-09">Alışverişe Başla</div>
                                </div>
                            </a>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</div>

<section class="bg0 p-t-23 p-b-140">
    <div class="container">
        <div class="p-b-10">
            <h3 class="ltext-103 cl5">Öne Çıkan Ürünler</h3>
        </div>
        <div class="flex-w flex-sb-m p-b-52">
            <div class="flex-w flex-l-m filter-tope-group m-tb-10">
                <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5 how-active1" data-filter="*">Tümü</button>
                @if (categories != null)
                {
                    foreach (var cat in categories)
                    {
                        <button class="stext-106 cl6 hov1 bor3 trans-04 m-r-32 m-tb-5" data-filter=".@cat.Name.ToLower().Replace(" ", "")">@cat.Name</button>
                    }
                }
            </div>
        </div>
        <div class="row isotope-grid">
            @if (products != null)
            {
                foreach (var product in products)
                {
                    var catClass = product.Category?.Name?.ToLower().Replace(" ", "") ?? "";
                    <div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item @catClass">
                        <div class="block2">
                            <div class="block2-pic hov-img0">
                                <img src="@(string.IsNullOrEmpty(product.ImageUrl) ? "/images/product-01.jpg" : product.ImageUrl)" alt="@product.Name">
                                <a asp-controller="Product" asp-action="Detail" asp-route-id="@product.Id" class="block2-btn flex-c-m stext-103 cl2 size-102 bg0 bor2 hov-btn1 p-lr-15 trans-04">
                                    İncele
                                </a>
                            </div>
                            <div class="block2-txt flex-w flex-t p-t-14">
                                <div class="block2-txt-child1 flex-col-l ">
                                    <a asp-controller="Product" asp-action="Detail" asp-route-id="@product.Id" class="stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
                                        @product.Name
                                    </a>
                                    <span class="stext-105 cl3">@product.Price.ToString("C", new System.Globalization.CultureInfo("tr-TR"))</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
        <div class="flex-c-m flex-w w-full p-t-45">
            <a asp-controller="Product" asp-action="Index" class="flex-c-m stext-101 cl5 size-103 bg2 bor1 hov-btn1 p-lr-15 trans-04">
                Tüm Ürünleri Gör
            </a>
        </div>
    </div>
</section>

@section Scripts {
<script src="~/vendor/isotope/isotope.pkgd.min.js"></script>
<script>
    $(document).ready(function () {
        var $grid = $('.isotope-grid').isotope({
            itemSelector: '.isotope-item',
            layoutMode: 'fitRows'
        });
        $('.filter-tope-group button').on('click', function () {
            var filterValue = $(this).attr('data-filter');
            $grid.isotope({ filter: filterValue === '*' ? '*' : '.' + filterValue });
            $('.filter-tope-group button').removeClass('how-active1');
            $(this).addClass('how-active1');
        });
    });
</script>
}
